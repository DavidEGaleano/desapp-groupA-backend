		<property name="password" column="password" type="string"/>
		
		<property name="mail" column="mail" type="string"/>	
		
		<one-to-one name="couple" class="model.User" cascade="save-update"/>
		
		<one-to-one name="profile" class="model.Profile" cascade="save-update"/>
