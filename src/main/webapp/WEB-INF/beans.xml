<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
        http://cxf.apache.org/jaxrs	http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" />
	<!-- lo que esta comentado deberia de estar descomentado, es para que pueda transformar
	     un objeto a json, desde el servicio, usa de ejemplo a Profile como salida -->
	 <bean id='jacksonProvider' class='org.codehaus.jackson.jaxrs.JacksonJaxbJsonProvider' />

	<bean id="probablyPrimeService" class="service.testcxf.prime.service.ProbablyPrimeService"/>
	
		<jaxrs:server id="restContainer" address="/">
			<jaxrs:serviceBeans>
				<ref bean="probablyPrimeService" />
			</jaxrs:serviceBeans>
			<jaxrs:extensionMappings>
				<entry key="json" value="application/json" />
			</jaxrs:extensionMappings>
			<jaxrs:providers>
				<ref bean="jacksonProvider" />
			</jaxrs:providers>			
		</jaxrs:server>
	
</beans>